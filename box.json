{
  "directories": ["src/"],
  "finder": [
    {
      "name": "*.php",
      "exclude": [
        ".gitignore",
        ".md",
        "phpunit",
        "Tester",
        "Tests",
        "tests",
        "yaml"
      ],
      "in": "vendor"
    }
  ],
  "compression": "GZ",
  "main": "bin/majora",
  "output": "build/majora.phar",
  "stub": true,
  "chmod": "0755"
}